<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
           <property name="hibernate.connection.driver_class"> 
                com.mysql.jdbc.Driver    
            </property> 
            
            <!--  数据库连接设置 -->
            <property name="hibernate.connection.url"> 
                jdbc:mysql://localhost:3306/hibernatechart
            </property> 
                        
            <property name="hibernate.connection.username">root</property> 
            <property name="hibernate.connection.password">123456</property> 
 
            <!-- 打印SQL语句--> 
            <property name="hibernate.show_sql">true</property> 
            
            <property name="hibernate.hbm2ddl.auto">
                create
            </property>
           
            <!-- SQL dialect 方言 --> 
            <property name="hibernate.dialect"> 
                org.hibernate.dialect.MySQLDialect  
            </property>
             
         <mapping class="Model.UserInfo" />
        <event type="save-update">
            <listener class="listener.UserInfoListener"/>
        </event>
        <listener class="listener.UserInfoListener" type="post-update"/>
        <listener class="listener.UserInfoListener" type="post-delete"/>
        
    </session-factory>
</hibernate-configuration>
